<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="TodosRestServerConfiguration" packages="">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %p %c{1.} [%t] %m%n"/>
        </Console>
        
        <RollingFile name="TodosRestServerRollingFile"
                     fileName="logs/todos-rest-server.log"
                     filePattern="logs/$${date:yyyy-MM-dd}/todos-rest-server-%d{yyyy-MM-dd}_%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="300 KB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>
    
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="Console"/>
        </Root>
        
        <Logger name="todos-rest-server" level="ALL">
            <AppenderRef ref="TodosRestServerRollingFile"/>
        </Logger>
    </Loggers>
</Configuration>